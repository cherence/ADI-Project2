<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cher.cherproject2.MainActivity">

    <ImageView
        android:id="@+id/welcome_imageView_id"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:background="@drawable/welcome"/>

    <LinearLayout
        android:id="@+id/icons_row1_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/welcome_imageView_id">

        <Button
            android:id="@+id/favorite_button_id"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:text="@string/favorites"
            android:textAlignment="center"
            android:textSize="0sp"
            android:background="@drawable/filled_heart_icon"
            />

        <Button
            android:id="@+id/allResults_button_id"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:text="@string/viewAll"
            android:textSize="0sp"
            android:background="@drawable/view_all_icon"
            />

        <Button
            android:id="@+id/shows_button_id"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:text="@string/shows"
            android:textSize="0sp"
            android:background="@drawable/shows_icon"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/icons_row2_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/icons_row1_id">

        <Button
            android:id="@+id/rides_button_id"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:text="@string/rides"
            android:textSize="0sp"
            android:background="@drawable/rides_icon"
            />

        <Button
            android:id="@+id/shopping_button_id"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:text="@string/shopping"
            android:textSize="0sp"
            android:background="@drawable/shopping_icon"
            />

        <Button
            android:id="@+id/food_button_id"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:text="@string/food"
            android:textSize="0sp"
            android:background="@drawable/food_icon"
            />

    </LinearLayout>

</RelativeLayout>
