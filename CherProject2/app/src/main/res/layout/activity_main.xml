<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cher.cherproject2.MainActivity">

    <ImageView
        android:id="@+id/welcome_imageView_id"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:background="@drawable/welcome"/>

    <Button
        android:id="@+id/favorite_button_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/favorites"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_above="@+id/allResults_button_id"
        android:textColor="@color/mainTextColor"
        android:background="@color/colorAccent"
        />

    <Button
        android:id="@+id/allResults_button_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/viewAll"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_above="@+id/food_button_id"
        android:textColor="@color/mainTextColor"
        android:background="@color/colorAccent"
        />


    <Button
        android:id="@+id/food_button_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/food"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_above="@+id/rides_button_id"
        android:textColor="@color/mainTextColor"
        android:background="@color/colorAccent"
        />

    <Button
        android:id="@+id/rides_button_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/rides"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_above="@+id/shows_button_id"
        android:textColor="@color/mainTextColor"
        android:background="@color/colorAccent"
        />

    <Button
        android:id="@+id/shows_button_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/shows"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_above="@+id/shopping_button_id"
        android:textColor="@color/mainTextColor"
        android:background="@color/colorAccent"
        />

    <Button
        android:id="@+id/shopping_button_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/shopping"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/mainTextColor"
        android:background="@color/colorAccent"
        />

</RelativeLayout>
